<StackPanel x:Class="System.Windows.Controls.StackPanel" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Width="500">
        <TextBlock  Margin="5,5" FontSize="15" FontWeight="Bold">Try Python: Interactive Python Tutorial</TextBlock>
        <ComboBox Margin="5,10" FontSize="15" x:Name="comboBox" Height="25"></ComboBox>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
        <ScrollViewer Height="600" x:Name="document" Margin="5,5" Width="500">
        </ScrollViewer>
        <ScrollViewer Height="600" Margin="5,0,0,10" Width="450" x:Name="scroller">
            <StackPanel x:Name="scrollerChild">
                <StackPanel x:Name="consoleOutput"></StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel x:Name="prompt">
                        <TextBlock 
                        FontSize = "15"
                        Margin = "0"
                        FontFamily = "Consolas, Global Monospace"
                       >&gt;&gt;&gt; </TextBlock>
                    </StackPanel>
                    <Border x:Name="consoleParent" Margin = "0" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</StackPanel>
<StackPanel x:Class="System.Windows.Controls.StackPanel" 
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Background="White">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock Margin="5, 0" FontSize="15" FontWeight="Bold">Try Python: Interactive Python Tutorial</TextBlock>
        <StackPanel x:Name="topNavbar" Orientation="Horizontal">
            <Button Margin="5" FontSize="15"  Height="25" Content="First" x:Name="topFirst" />
            <Button Margin="5" FontSize="15"  Height="25" Content="Prev" x:Name="topPrev" />
            <Button Margin="5" FontSize="15"  Height="25" Content="Next" x:Name="topNext" />
            <Button Margin="5" FontSize="15"  Height="25" Content="Last" x:Name="topLast" />
            <ComboBox Margin="5" FontSize="15" x:Name="topComboBox" Height="25" Width="500" />
        </StackPanel>
    </StackPanel>
    <StackPanel Orientation="Horizontal" x:Name="container">
        <Border CornerRadius="10" x:Name="document" BorderBrush="Black" BorderThickness="2" Margin="1" Padding="2">
            <ScrollViewer Margin="5" HorizontalAlignment="Left" x:Name="documentScroller" />
        </Border>
        <Border CornerRadius="10" BorderBrush="Black" BorderThickness="2" Margin="1" Padding="2">
            <ScrollViewer Margin="5" x:Name="scroller" HorizontalAlignment="Right">
                <StackPanel x:Name="scrollerChild">
                    <StackPanel x:Name="consoleOutput" />
                    <StackPanel Orientation="Horizontal">
                        <StackPanel x:Name="prompt">
                            <TextBlock 
                            FontSize = "15"
                            Margin = "0"
                            Padding = "0,3,0,0"
                            FontFamily = "Consolas, Global Monospace"
                           >&gt;&gt;&gt;&#160;</TextBlock>
                        </StackPanel>
                        <Border x:Name="consoleParent" Margin = "0" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </StackPanel>
    <StackPanel HorizontalAlignment="Center" x:Name="bottomNavbar" Orientation="Horizontal">
        <Button Margin="5" FontSize="15"  Height="25" Content="First" x:Name="bottomFirst" />
        <Button Margin="5" FontSize="15"  Height="25" Content="Prev" x:Name="bottomPrev" />
        <Button Margin="5" FontSize="15"  Height="25" Content="Next" x:Name="bottomNext" />
        <Button Margin="5" FontSize="15"  Height="25" Content="Last" x:Name="bottomLast" />
        <ComboBox Margin="5" FontSize="15" x:Name="bottomComboBox" Height="25" Width="500" />
    </StackPanel>
</StackPanel>
<StackPanel x:Class="System.Windows.Controls.StackPanel" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Width="500">
        <TextBlock  Margin="5,5" FontSize="15" FontWeight="Bold">Try Python: Interactive Python Tutorial</TextBlock>
        <ComboBox Margin="5,10" FontSize="15" x:Name="comboBox" Height="25"></ComboBox>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
        <ScrollViewer Height="550">
            <Border x:Name="document" Margin="5,5" Width="500">
            </Border>
        </ScrollViewer>
        <Border Margin="5,5" Width="480">
            <StackPanel>
                <ScrollViewer Height="300" Margin="0,0,0,10">
                    <TextBox x:Name="consoleOut" Height="600" FontFamily="Consolas, Global Monospace" FontSize="15" />
                </ScrollViewer>
                <TextBox
                    x:Name="consoleIn" 
                    Height="250" 
                    FontFamily="Consolas, Global Monospace" 
                    FontSize="15"  
                    AcceptsReturn="True" />
            </StackPanel>
        </Border>
    </StackPanel>
</StackPanel>